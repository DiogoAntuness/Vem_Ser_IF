<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde5_paleta"
    tools:context=".GraduacoesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Graduações do Campus Senhor do Bonfim"
            android:textAlignment="center"
            android:textColor="@color/text_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Card: Licenciatura em Ciências da Computação -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/verde4_paleta"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logoLcc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logolcc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logolcc"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/logoLcc"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Licenciatura em Ciências da Computação - LCC"
                        android:textAllCaps="false"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/linkLccPagina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Página do Curso"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_web" />

                    <TextView
                        android:id="@+id/linkLccMatriz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Matriz Curricular"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_document" />

                    <TextView
                        android:id="@+id/linkLccInsta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Instagram"
                        android:textColor="@color/if_red_accent"
                        app:drawableStartCompat="@drawable/ic_instagram" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card: LCA -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/verde4_paleta"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logolca"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logolca"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:srcCompat="@drawable/logolca" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/logolca"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Licenciatura em Ciências Agrárias - LCA"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/linkLcaPagina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Página do Curso"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_web" />

                    <TextView
                        android:id="@+id/linkLcaMatriz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Matriz Curricular"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_document" />

                    <TextView
                        android:id="@+id/linkLcaInsta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Instagram"
                        android:textColor="@color/if_red_accent"
                        app:drawableStartCompat="@drawable/ic_instagram" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Licenciatura em Química -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/verde4_paleta"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logoLq"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logolq"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:srcCompat="@drawable/logolq" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/logoLq"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Licenciatura em Química - LCI"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/linkLqPagina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Página do Curso"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_web" />

                    <TextView
                        android:id="@+id/linkLqMatriz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Matriz Curricular"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_document" />

                    <TextView
                        android:id="@+id/linkLqInsta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Instagram"
                        android:textColor="@color/if_red_accent"
                        app:drawableStartCompat="@drawable/ic_instagram" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card: ADM -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/verde4_paleta"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logoadm"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logoadm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:srcCompat="@drawable/logoadm" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/logoadm"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Bacharelado em Administração - ADM"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/linkAdmPagina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Página do Curso"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_web" />

                    <TextView
                        android:id="@+id/linkAdmMatriz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Matriz Curricular"
                        android:textColor="@color/verde1_paleta"
                        app:drawableStartCompat="@drawable/ic_document" />

                    <TextView
                        android:id="@+id/linkAdmInsta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Instagram"
                        android:textColor="@color/if_red_accent"
                        app:drawableStartCompat="@drawable/ic_instagram" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- BOTÃO DE VOLTAR ADICIONADO AQUI -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBackToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Voltar ao Início"
            app:backgroundTint="@color/verde1_paleta"
            app:icon="@drawable/ic_back"
            app:iconGravity="start" />


    </LinearLayout>

</ScrollView>
